generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String?
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[] @relation("UserMessages")
  threads   Thread[]  @relation("UserThreads")
}

model Thread {
  id        Int       @id @default(autoincrement())
  userId    Int
  title     String    @default("New Conversation")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
  user      User      @relation("UserThreads", fields: [userId], references: [id])

  @@index([userId], map: "Thread_userId_fkey")
}

model Message {
  id          Int      @id @default(autoincrement())
  threadId    Int
  userId      Int?
  senderType  String
  contentType String
  content     String   @db.Text
  fileName    String?
  fileSize    Int?
  filePath    String?
  fileHash    String?
  createdAt   DateTime @default(now())
  linkUrl     String?
  thread      Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)
  user        User?    @relation("UserMessages", fields: [userId], references: [id])

  @@index([threadId], map: "Message_threadId_fkey")
  @@index([userId], map: "Message_userId_fkey")
}
